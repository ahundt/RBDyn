<robot name="my_robot">
	<link name="base_link">
	</link>
	<link name="link1">
		<inertial>
	      <origin rpy="0 0 0" xyz="0 0 0.5"/>
	      <mass value="6"/>
	      <inertia ixx="2.1" ixy="0" ixz="0" iyy="2.1" iyz="0" izz="2.1"/>
	    </inertial>
		<visual>
		  <geometry>
			<cylinder radius="0.1" length="1"/>
		  </geometry>
		  <origin rpy="0 0 0" xyz="0 0 0.5"/>
		</visual>
	</link>

	<link name="link2">
		<inertial>
	      <origin rpy="0 0 0" xyz="0.5 0 0"/>
	      <mass value="5.5"/>
	      <inertia ixx="1.8" ixy="0" ixz="0" iyy="1.8" iyz="0" izz="1.8"/>
	    </inertial>
		<visual>
		  <geometry>
			<cylinder radius="0.1" length="1"/>
		  </geometry>
		  <origin rpy="0 1.57 0" xyz="0.5 0 0"/>
		</visual>
	</link>

	<link name="link3">
		<inertial>
	      <origin rpy="0 0 0" xyz="0.4 0 0"/>
	      <mass value="4.5"/>
	      <inertia ixx="0.7" ixy="0" ixz="0" iyy="0.7" iyz="0" izz="0.7"/>
	    </inertial>
		<visual>
		  <geometry>
			<cylinder radius="0.1" length="0.8"/>
		  </geometry>
		  <origin rpy="0 1.57 0" xyz="0.4 0 0"/>
		</visual>
	</link>

	<joint name="joint0" type="continuous">
		<parent link="base_link"/>
		<child link="link1"/>
		<origin rpy="0 0 0" xyz="0 0 0"/>
		<axis xyz="0 0 1" />
	</joint>
	<joint name="joint1" type="continuous">
		<parent link="link1"/>
		<child link="link2"/>
		<origin rpy="0 0 0" xyz="0 0 1"/>
		<axis xyz="0 1 0" />
	</joint>	
	<joint name="joint2" type="continuous">
		<parent link="link2"/>
		<child link="link3"/>
		<origin rpy="0 0 0" xyz="1 0 0"/>
		<axis xyz="0 1 0" />
	</joint>
</robot>